   <entry key="insertInquiry">
      INSERT INTO 
               INQUIRY
               (
               INQUIRY_NO, 
               CATEGORY_NO, 
               USER_ID, 
               INQUIRY_TITLE, 
               INQUIRY_CONTENT
               )
         VALUES
               (
               SEQ_INO.NEXTVAL, 
               ?, ?, ?, ?)
   </entry>
   
   <entry key="selectListCount">
      SELECT COUNT(*) COUNT
           FROM INQUIRY
       WHERE USER_ID = ?
         AND STATUS = 'O'
   </entry>
   
   <entry key="selectInquiryList">
      SELECT * 
           FROM ( SELECT ROWNUM RNUM, A.*
                   FROM(SELECT INQUIRY_NO, CATEGORY_NAME, USER_ID, INQUIRY_TITLE ,INQUIRY_CONTENT, CREATE_DATE
                          FROM INQUIRY I
                          JOIN CATEGORY USING(CATEGORY_NO)
                         WHERE I.STATUS='O'
                           AND USER_ID = ?
                         ORDER BY CREATE_DATE DESC) A)
        WHERE RNUM BETWEEN ? AND ?
   
   </entry>
    
   <entry key="deleteInquiry">
         UPDATE INQUIRY
         SET STATUS='X'
         WHERE INQUIRY_NO = ?
   
   </entry>
   
   <entry key="selectCategoryList">
      SELECT CATEGORY_NO, CATEGORY_NAME
      FROM CATEGORY
      WHERE CATEGORY_NO != 50
      AND CATEGORY_NO != 60
   </entry>
   
    
   <entry key="updateInquiry">
     UPDATE INQUIRY
        SET CATEGORY_NO = ?,
             INQUIRY_TITLE = ?,
             INQUIRY_CONTENT = ?
       WHERE 
              INQUIRY_NO = ?
   </entry>
  
   <entry key="selectInquiry">
      SELECT 
            INQUIRY_NO,
            CATEGORY_NAME, 
            USER_ID,
            INQUIRY_TITLE, 
            CREATE_DATE,
            INQUIRY_CONTENT
        FROM 
              INQUIRY 
        JOIN 
              CATEGORY USING(CATEGORY_NO)
       WHERE 
             INQUIRY_NO = ?
         AND 
               STATUS='O'
   </entry>
   
   
   
   
   
   
   
   
   
