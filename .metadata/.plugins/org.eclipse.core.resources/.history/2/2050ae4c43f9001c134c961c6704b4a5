   <entry key="loginUser">
      SELECT 
             MEMBER_ID,
             MEMBER_PWD,
             MEMBER_NAME,
             MEMBER_FNO,
             MEMBER_BNO,
             GENDER,
             PHONE,
             EMAIL,
             STATUS,
             MEMBER_CODE
         FROM  
               MEMBER
       WHERE 
             MEMBER_ID = ?
           AND 
                 MEMBER_PWD = ?
          
   </entry>
   <entry key="loginHosp">
      SELECT
            HOSP_ID,
            HOSP_PWD,
            HOSP_NAME,
            HOSP_CRN,
            HOSP_EMAIL,
            STATUS,
            HOSP_CODE
        FROM 
              HOSPITAL
       WHERE   
             HOSP_ID = ?
         AND 
               HOSP_PWD = ?
                    
   </entry>
   
   <entry key="memberIdCheck">
      SELECT 
            COUNT(*)
        FROM 
             MEMBER
       WHERE 
             MEMBER_ID = ?
   </entry>
   
   <entry key="hospIdCheck">
      SELECT 
            COUNT(*)
        FROM 
             HOSPITAL
       WHERE 
             HOSP_ID = ?
   </entry>
   
