	<comment>회원 관련 쿼리문들</comment>
	<entry key="insert1Pet">
		INSERT INTO ANIMAL
			(PET_NO, 
			 PET_NAME, 
			 PET_INPUTNO,
			 PET_KIND, 
			 PET_BREED, 
			 PET_BIRTH, 
			 PET_NEUTRAL,
			 PET_OWNER)
		VALUES
			(SEQ_ANO.NEXTVAL, 
			 ?, 
			 ?, 
			 ?, 
			 ?,
			 TO_DATE(?,'YYYY-MM-DD'), 
			 ?,
			 ?)
	</entry>
	<entry key="insert2Pet">
		INSERT INTO ATTACHMENT
			(FILE_NO, 
			 REF_CNO, 
			 ORIGIN_NAME, 
			 CHANGE_NAME, 
			 FILE_PATH, 
			 FILE_LEVEL)
		VALUES
			(SEQ_FNO.NEXTVAL, 
			 SEQ_ANO.CURRVAL, 
			 ?, 
			 ?, 
			 ?, 
			 ?)
	</entry>
	<entry key="selectPetList">
		SELECT PET_OWNER, PET_NO, FILE_PATH||CHANGE_NAME TITLEIMG, PET_NAME
		  FROM ANIMAL A
		  JOIN ATTACHMENT ON(PET_NO = REF_CNO)
		 WHERE A.STATUS = 'Y'
		   AND PET_OWNER = ?
		   AND FILE_LEVEL = 1
	</entry>
	<entry key="deletePet">
		UPDATE (SELECT PET_NAME, MEMBER_PWD, A.STATUS
				FROM ANIMAL A
				JOIN MEMBER M ON (PET_OWNER = MEMBER_ID)) 
		   SET STATUS='N' 
		 WHERE PET_NAME = ?
		   AND MEMBER_PWD = ?
	</entry>
	

	<entry key="selectAnimal">
		SELECT *
		FROM ANIMAL
		WHERE PET_NO = ?
		  AND STATUS = 'Y'
	</entry>
	<entry key="selectDate">
		SELECT *
		FROM DIARY
		WHERE WRITE_DATE = ?
		  AND PET_NO = ?
		  AND STATUS = 'Y'
	</entry>
	<entry key="insertDiary">
		INSERT INTO DIARY
			(DIARY_NO,
			PET_WEIGHT,
			PET_WALK,
			PET_FOOD,
			PET_PEE,
			PET_RECORD,
			WRITE_DATE,
			STATUS,
			PET_NO
			)
		VALUES
			(SEQ_DNO.NEXTVAL, 
			 ?,
			 ?, 
			 ?, 
			 ?, 
			 ?,
			 ?,
			 DEFAULT,
			 ?)
	</entry>
